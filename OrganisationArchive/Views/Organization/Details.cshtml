@model OrganizationVM
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h1>Details</h1>

<div>
    <h4>Organization</h4>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationDTO.Name)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationDTO.Name)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationDTO.Address)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationDTO.Address)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.OrganizationDTO.Work)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.OrganizationDTO.Work)
        </dd>

        <dt class="col-sm-2">
            <label class="control-label"> Employees  </label>
        </dt>
        <dd>
            @foreach (var item in Model.OrganizationDTO.Employees)
            {
                <li>

                    @item
                </li>

            }
        </dd>
    </dl>




</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model.OrganizationDTO.Id">Edit</a> |
    <a asp-action="Organizations">Back to List</a>
</div>
